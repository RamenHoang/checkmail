    <script>
        // Set current year
        document.getElementById('currentYear').textContent = new Date().getFullYear();
        
        // Scroll to top function
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }
        
        // Show/hide scroll to top button
        window.addEventListener('scroll', function() {
            const scrollBtn = document.querySelector('.scroll-to-top');
            if (scrollBtn) {
                if (window.pageYOffset > 300) {
                    scrollBtn.classList.add('show');
                } else {
                    scrollBtn.classList.remove('show');
                }
            }
        });
        
        // Enhanced page load animation
        document.addEventListener('DOMContentLoaded', function() {
            // Add stagger animation to main content
            const mainContent = document.querySelector('.main-content');
            if (mainContent) {
                mainContent.classList.add('fade-in-up');
            }
            
            // Animate breadcrumb
            const breadcrumb = document.querySelector('.breadcrumb-section');
            if (breadcrumb) {
                breadcrumb.style.animation = 'slideInDown 0.6s ease-out 0.2s both';
            }
            
            // Animate footer elements
            const footerWidgets = document.querySelectorAll('.footer-widget');
            footerWidgets.forEach((widget, index) => {
                widget.style.animation = `fadeInUp 0.6s ease-out ${0.1 * (index + 1)}s both`;
            });
        });
        
        // Page specific functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Load email list on page load (only available emails)
            loadEmailList(1, true);
        });

        // Global pagination state
        let currentPage = 1;
        let showOnlyAvailable = true;
        const itemsPerPage = 10;

        // Load email list from API with pagination
        async function loadEmailList(page = 1, availableOnly = true) {
            const loadingState = document.getElementById('loadingState');
            const emailStats = document.getElementById('emailStats');
            const emailList = document.getElementById('emailList');
            const noEmailsState = document.getElementById('noEmailsState');
            const paginationContainer = document.getElementById('paginationContainer');
            
            // Update global state
            currentPage = page;
            showOnlyAvailable = availableOnly;
            
            // Show loading state
            loadingState.style.display = 'block';
            emailStats.style.display = 'none';
            emailList.style.display = 'none';
            noEmailsState.style.display = 'none';
            paginationContainer.style.display = 'none';
            
            try {
                const queryParams = new URLSearchParams({
                    page: page,
                    limit: itemsPerPage,
                    available: availableOnly
                });
                
                const response = await fetch(`/api/emails?${queryParams}`);
                const result = await response.json();
                
                console.log('API Response:', result);
                
                if (result.success) {
                    const { emails, pagination, total, available } = result;
                    
                    // Debug: Log the pagination object
                    console.log('Pagination object:', pagination);
                    console.log('Emails received:', emails?.length || 0);
                    
                    // Update statistics
                    document.getElementById('totalEmails').textContent = total || 0;
                    document.getElementById('availableEmails').textContent = available || 0;
                    document.getElementById('usedEmails').textContent = (total || 0) - (available || 0);
                    
                    if (emails && emails.length > 0) {
                        // Show email list
                        renderEmailList(emails);
                        if (pagination && pagination.currentPage) {
                            renderPagination(pagination);
                            paginationContainer.style.display = 'flex';
                        } else {
                            console.warn('Invalid pagination object, hiding pagination');
                            paginationContainer.style.display = 'none';
                        }
                        emailStats.style.display = 'block';
                        emailList.style.display = 'block';
                    } else {
                        // Show no emails state
                        console.log('No emails found, showing empty state');
                        noEmailsState.style.display = 'block';
                    }
                } else {
                    throw new Error(result.message || 'Unknown error occurred');
                }
            } catch (error) {
                console.error('Error loading emails:', error);
                showAlert('danger', 'Kh√¥ng th·ªÉ t·∫£i danh s√°ch email: ' + error.message);
                noEmailsState.style.display = 'block';
            } finally {
                loadingState.style.display = 'none';
            }
        }

        // Render pagination controls
        function renderPagination(pagination) {
            const paginationNav = document.getElementById('paginationNav');
            const pageSelector = document.getElementById('pageSelector');
            const itemsRange = document.getElementById('itemsRange');
            const totalItems = document.getElementById('totalItems');
            
            // Check if pagination object exists and has required properties
            if (!pagination || typeof pagination.currentPage === 'undefined') {
                console.warn('Pagination object is invalid:', pagination);
                document.getElementById('paginationContainer').style.display = 'none';
                return;
            }
            
            console.log('Rendering pagination with:', pagination);
            
            // Update pagination info
            const startItem = pagination.startIndex || ((pagination.currentPage - 1) * pagination.limit + 1);
            const endItem = pagination.endIndex || Math.min(pagination.currentPage * pagination.limit, pagination.totalItems);
            
            itemsRange.textContent = `${startItem}-${endItem}`;
            totalItems.textContent = pagination.totalItems || 0;
            
            // Populate page selector dropdown
            let pageOptions = '';
            for (let i = 1; i <= pagination.totalPages; i++) {
                pageOptions += `<option value="${i}" ${i === pagination.currentPage ? 'selected' : ''}>${i}</option>`;
            }
            pageSelector.innerHTML = pageOptions;
            
            // Don't show pagination if there's only one page or no items
            if (pagination.totalPages <= 1) {
                paginationNav.innerHTML = '';
                // Hide page selector if only one page
                pageSelector.parentElement.style.display = pagination.totalPages <= 1 ? 'none' : 'flex';
                return;
            }
            
            // Show page selector for multiple pages
            pageSelector.parentElement.style.display = 'flex';
            
            // Generate pagination buttons
            let paginationHTML = '';
            
            // Previous button
            paginationHTML += `
                <li class="page-item ${!pagination.hasPrev ? 'disabled' : ''}">
                    <button class="page-link" onclick="changePage(${pagination.currentPage - 1})" ${!pagination.hasPrev ? 'disabled' : ''}>
                        <i class="fas fa-chevron-left"></i>
                    </button>
                </li>
            `;
            
            // Page numbers (show fewer numbers when there are many pages)
            const maxVisiblePages = 5;
            const startPage = Math.max(1, pagination.currentPage - Math.floor(maxVisiblePages / 2));
            const endPage = Math.min(pagination.totalPages, startPage + maxVisiblePages - 1);
            
            if (startPage > 1) {
                paginationHTML += `
                    <li class="page-item">
                        <button class="page-link" onclick="changePage(1)">1</button>
                    </li>
                `;
                if (startPage > 2) {
                    paginationHTML += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
                }
            }
            
            for (let i = startPage; i <= endPage; i++) {
                paginationHTML += `
                    <li class="page-item ${i === pagination.currentPage ? 'active' : ''}">
                        <button class="page-link" onclick="changePage(${i})">${i}</button>
                    </li>
                `;
            }
            
            if (endPage < pagination.totalPages) {
                if (endPage < pagination.totalPages - 1) {
                    paginationHTML += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
                }
                paginationHTML += `
                    <li class="page-item">
                        <button class="page-link" onclick="changePage(${pagination.totalPages})">${pagination.totalPages}</button>
                    </li>
                `;
            }
            
            // Next button
            paginationHTML += `
                <li class="page-item ${!pagination.hasNext ? 'disabled' : ''}">
                    <button class="page-link" onclick="changePage(${pagination.currentPage + 1})" ${!pagination.hasNext ? 'disabled' : ''}>
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </li>
            `;
            
            paginationNav.innerHTML = paginationHTML;
        }

        // Change page function
        function changePage(page) {
            const pageNum = parseInt(page);
            if (pageNum >= 1) {
                console.log('Changing to page:', pageNum);
                loadEmailList(pageNum, showOnlyAvailable);
            }
        }


        // Request an email from the system
        async function requestEmail() {
            const requestBtn = document.getElementById('requestEmailBtn');
            const alertContainer = document.getElementById('alertContainer');
            const emailResult = document.getElementById('emailResult');
            const resultEmail = document.getElementById('resultEmail');
            
            // Show loading state
            requestBtn.disabled = true;
            requestBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>ƒêang x·ª≠ l√Ω...';
            
            try {
                const response = await fetch('/api/request-email', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                const result = await response.json();
                
                if (result.success) {
                    try {
                        // Try to copy to clipboard
                        await navigator.clipboard.writeText(result.email);
                        showAlert('success', 'üéâ Email ƒë√£ ƒë∆∞·ª£c copy v√†o clipboard v√† ƒë√°nh d·∫•u ƒë√£ s·ª≠ d·ª•ng!');
                    } catch (clipboardError) {
                        // Handle clipboard permission error
                        console.warn('Clipboard permission denied:', clipboardError);
                        showAlert('warning', 'üìù Email ƒë√£ ƒë∆∞·ª£c hi·ªÉn th·ªã b√™n d∆∞·ªõi. Vui l√≤ng copy th·ªß c√¥ng.');
                    }
                    
                    // Show success with confetti
                    createConfetti();
                    
                    // Show the email result
                    resultEmail.value = result.email;
                    emailResult.style.display = 'block';
                    
                    // Show success toast
                    showToast('Email ƒë√£ s·∫µn s√†ng ƒë·ªÉ s·ª≠ d·ª•ng!', 'success');
                    
                } else {
                    showAlert('danger', result.message || 'Kh√¥ng th·ªÉ l·∫•y email');
                }
            } catch (error) {
                console.error('Error requesting email:', error);
                showAlert('danger', 'C√≥ l·ªói x·∫£y ra khi y√™u c·∫ßu email: ' + error.message);
            } finally {
                // Reset button state
                requestBtn.disabled = false;
                requestBtn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Y√™u c·∫ßu Email';
            }
        }

        // Copy email to clipboard (for the copy button in result display)
        async function copyToClipboard() {
            const resultEmail = document.getElementById('resultEmail');
            
            try {
                await navigator.clipboard.writeText(resultEmail.value);
                showToast('Email ƒë√£ ƒë∆∞·ª£c copy v√†o clipboard!', 'success');
            } catch (error) {
                console.warn('Clipboard API failed:', error);
                try {
                    // Try fallback method for older browsers
                    resultEmail.select();
                    resultEmail.setSelectionRange(0, 99999); // For mobile devices
                    const successful = document.execCommand('copy');
                    if (successful) {
                        showToast('Email ƒë√£ ƒë∆∞·ª£c copy v√†o clipboard!', 'success');
                    } else {
                        throw new Error('Fallback copy failed');
                    }
                } catch (fallbackError) {
                    console.error('Fallback copy failed:', fallbackError);
                    showToast('Kh√¥ng th·ªÉ copy. Vui l√≤ng copy th·ªß c√¥ng b·∫±ng c√°ch ch·ªçn v√† copy.', 'warning');
                }
            }
        }

        // Show alert function
        function showAlert(type, message) {
            const alertContainer = document.getElementById('alertContainer');
            const alertClass = type === 'success' ? 'alert-success' : 
                               type === 'warning' ? 'alert-warning' : 
                               type === 'info' ? 'alert-info' : 'alert-danger';
            const iconClass = type === 'success' ? 'fa-check-circle' : 
                             type === 'warning' ? 'fa-exclamation-triangle' : 
                             type === 'info' ? 'fa-info-circle' : 'fa-exclamation-triangle';
            
            alertContainer.innerHTML = `
                <div class="alert ${alertClass} alert-dismissible fade show">
                    <i class="fas ${iconClass} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
        }

